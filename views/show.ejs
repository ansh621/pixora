<%-include('./partials/header')%>
    <div class="fixed h-full overflow-y-auto w-full mb-40 mt-20 bg-white">
        <div class="relative h-5/6 md:w-8/12  bg-opacity-50  rounded-lg  ml-60 ">
            <div class="w-full h-full bg-rose-50 bg-no-repeat bg-cover  bg-center rounded-t-xl py-5"
                style="background-image: url(/images/uploads/<%= postdata.image %>); background-size: contain;">
            </div>
            <div class="relative w-full h-auto border-2 px-5 py-5 ">
                <div class="w-full  flex justify-between h-12">
                    <p class="font-bold underline decoration-rose-500 text-4xl">
                        <%= postdata.title %>
                    </p>
                    <a href="/feed" class="m-3 text-red-500 hover:text-red-800">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="5"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </a>
                </div>


                <div class="relative w-full h-32 border-2 bg-slate-100  rounded-lg px-5 py-5 ">
                    <p class="text-lg font-semibold">Image Description</p>

                    <p class="text-left  pt-2  pb-1 text-zinc-300 font-medium text-sm">
                        <%= postdata.description %>
                    </p>
                </div>


                <div class="relative w-full max-h-20 mt-5 mb-20 border-2 px-5 py-5 bg-slate-100 rounded-lg">
                    <div class="flex items-center">

                        <img src="/images/uploads/<%= postdata.user ? (postdata.user.profileImage || 'default-profile-image.jpg') : 'default-profile-image.jpg' %>"
                            alt="Profile Picture" class="w-10 h-10 rounded-full">

                            <a href="/profile2/<%= postdata.user ? postdata.user._id : '' %>" class="ml-2 font-bold text-lg">
                                <%= postdata.user ? (postdata.user.name || 'Unknown') : 'Unknown' %>
                            </a>
                            

                        
                    </div>

                </div>
            </div>
        </div>
    </div>




    </div>

    </div>
    <%-include('./partials/footer')%>