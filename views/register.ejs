<%- include("./partials/header.ejs") %>

    <style>
        .video-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .form-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
        }
    </style>

    <div class="video-container">
        <video id="fullscreen-video" autoplay muted loop class="absolute inset-0 object-cover w-full h-full">
            <source src="https://videos.pexels.com/video-files/13384219/13384219-uhd_3840_2160_25fps.mp4"
                type="video/mp4">
        </video>
    </div>

    <div class="form-container">
        <div class="relative z-10 w-[25vw] bg-white px-20 py-10 rounded-[30px]">
            <h1 class="text-4xl tracking-tighter text-center mb-7 font-semibold text-zinc-700 capitalize leading-none">
                Create new Account</h1>
            <% if(error && error.length>0){ %>
                <p class="error">
                    <%= error %>
                </p>
                <% } %>
                    <form action="/register" method="post">
                        <input class="block w-full px-3 mt-2 py-2 border-2 rounded-md" type="text" name="name"
                            placeholder="Name">
                        <input class="block w-full px-3 mt-2 py-2 border-2 rounded-md" type="text" name="username"
                            placeholder="Username">
                        <input class="block w-full px-3 mt-2 py-2 border-2 rounded-md" type="password" name="password"
                            placeholder="Password">
                        <input class="block w-full px-3 mt-2 py-2 border-2 rounded-md" type="email" name="email"
                            placeholder="Email">
                        <input class="block w-full px-3 mt-2 py-2 border-2 rounded-md" type="number" name="contact"
                            placeholder="Contact">

                        <input class="block w-full px-3 mt-5 py-2 bg-rose-600 text-white border-2 rounded-full"
                            type="submit" value="Register">
                        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you
                            agree to pixora's Terms of Service; Opens a new tab and acknowledge you've read our
                            Privacy Policy</p>
                        <a class="inline-block mt-7 border-2 px-3 py-2 bg-zinc-200 rounded-md text-center text-m w-full font-semibold text-zinc-700"
                            href="/">Already have an Account</a>
                    </form>
        </div>
    </div>

    <%- include("./partials/footer.ejs") %>