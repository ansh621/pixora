<%- include('./partials/header.ejs') %>
<video autoplay muted loop class="absolute inset-0 object-cover w-full h-full">
  <source src="https://videos.pexels.com/video-files/3129595/3129595-uhd_3840_2160_30fps.mp4" type="video/mp4">
  Your browser does not support the video tag.
</video>
<div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50">
  <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
    <h1 class="text-4xl mb-7 tracking-tighter text-center font-semibold text-zinc-700 capitalize leading-none">Welcome to pixora</h1> 
    <% if(error && error.length>0){ %>
      <p class="error"><%= error %></p>
    <% } %>
    <form action="/login" method="post">
      <input class="block w-full px-3 mt-2 py-2 border-2 rounded-md" type="text" name="username"  placeholder="Username">
      <input class="block w-full px-3   mt-2 py-2 border-2 rounded-md" type="password" name="password" placeholder="Password">
      
      <input class="block w-full mt-4 px-3 py-2 bg-rose-600 text-white border-2 rounded-3xl" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to pixora's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy</p>
      <a class="inline-block mt-7 border-2 px-3 py-2 bg-zinc-200 rounded-md text-center text-m w-full font-semibold text-zinc-700" href="register">Not on pixora yet? Signup!</a>
    </form>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
